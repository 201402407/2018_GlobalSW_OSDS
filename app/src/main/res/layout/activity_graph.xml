<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".Gayeon.tempActivity">

    <!--android:background="@drawable/background_graph"-->
    <include
        layout="@layout/activity_toolbar"/>

    <LinearLayout
        android:layout_below="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="사용 횟수"
            android:textColor="#000000"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:text="0"
                android:textColor="#24A7FF"
                android:textSize="55dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" / 124회"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/reset"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/renew" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".graphActivity">

        <ProgressBar
            android:id="@+id/circular_progress_bar_background"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="55dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/circular_progress_background" />

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="55dp"
            android:indeterminate="false"
            android:max="124"
            android:progress="1"
            android:progressDrawable="@drawable/circular_progressbar" />

    </RelativeLayout>

</RelativeLayout>